{
  "name": "tldrwire",
  "version": "1.2.0",
  "description": "AI-powered news summarizer providing intelligent, customizable rundowns of current events across regions and categories using Google's Gemini AI",
  "keywords": [
    "news",
    "summarizer",
    "ai",
    "gemini",
    "rss",
    "google-news",
    "current-events",
    "tl-dr"
  ],
  "author": "TLDRWire Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/takeourcarsnow/qweasd.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:no-refresh": "cross-env NEXT_DISABLE_FAST_REFRESH=1 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "security-check": "npm audit",
    "pre-deploy": "npm run lint && npm run test && npm run security-check",
    "deploy:vercel": "vercel --prod"
  },
  "dependencies": {
    "@google/generative-ai": "^0.19.0",
    "dompurify": "^3.1.7",
    "dotenv": "^16.4.5",
    "marked": "^12.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rss-parser": "^3.13.0",
    "twemoji": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "nodemonConfig": {
    "ext": "js,json,env",
    "ignore": [
      "node_modules/",
      "*.test.js"
    ],
    "delay": "1000"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "api/*.js",
      "!node_modules/**"
    ],
    "testTimeout": 10000
  }
}
